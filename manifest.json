{
	"manifest_version": 3,
	"name": "Job Seeker",
	"version": "1.0",
	"description": "Extract job details and save to Google Sheets",
	"icons": {
		"16": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	},
	"permissions": ["scripting", "activeTab", "storage", "tabs"],
	"host_permissions": ["https://*/*"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["content.js"]
		}
	]
}
